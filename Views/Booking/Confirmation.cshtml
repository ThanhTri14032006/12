@model RestaurantMVC.Models.Booking
@{
    ViewData["Title"] = "Xác nhận đặt bàn";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Message -->
            <div class="text-center mb-5">
                <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" 
                     style="width: 100px; height: 100px;">
                    <i class="fas fa-check fa-3x"></i>
                </div>
                <h1 class="display-5 fw-bold text-success mb-3">Đặt bàn thành công!</h1>
                <p class="lead">Cảm ơn bạn đã đặt bàn tại Restaurantly. Chúng tôi đã nhận được yêu cầu của bạn.</p>
            </div>

            <!-- Booking Details -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-receipt me-2"></i>Thông tin đặt bàn</h4>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Mã đặt bàn:</strong>
                            <div class="bg-light p-2 rounded mt-1">
                                <code class="text-primary fs-5">#@Model.Id.ToString().PadLeft(6, '0')</code>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Trạng thái:</strong>
                            <div class="mt-1">
                                <span class="badge bg-warning fs-6">@Model.Status</span>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Tên khách hàng:</strong>
                            <div class="mt-1">@Model.CustomerName</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Số điện thoại:</strong>
                            <div class="mt-1">@Model.Phone</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Email:</strong>
                            <div class="mt-1">@Model.Email</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Số người:</strong>
                            <div class="mt-1">@Model.PartySize người</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Ngày đặt:</strong>
                            <div class="mt-1">@Model.BookingDate.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Giờ đặt:</strong>
                            <div class="mt-1">@Model.BookingTime.ToString("HH:mm")</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                    {
                        <hr>
                        <div class="mb-3">
                            <strong>Yêu cầu đặc biệt:</strong>
                            <div class="mt-1 bg-light p-3 rounded">@Model.SpecialRequests</div>
                        </div>
                    }

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Ngày tạo:</strong>
                            <div class="mt-1">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Important Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Thông tin quan trọng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-primary">Lưu ý quan trọng:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-clock text-warning me-2"></i>Vui lòng có mặt đúng giờ</li>
                                <li><i class="fas fa-phone text-success me-2"></i>Gọi trước nếu muốn thay đổi</li>
                                <li><i class="fas fa-id-card text-info me-2"></i>Mang theo mã đặt bàn</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold text-primary">Chính sách:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-hourglass-half text-warning me-2"></i>Giữ bàn trong 15 phút</li>
                                <li><i class="fas fa-times-circle text-danger me-2"></i>Hủy miễn phí trước 1 giờ</li>
                                <li><i class="fas fa-check-circle text-success me-2"></i>Xác nhận qua điện thoại</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-phone me-2"></i>Thông tin liên hệ</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <i class="fas fa-phone fa-2x text-primary mb-2"></i>
                            <div><strong>Điện thoại</strong></div>
                            <div><a href="tel:+84123456789" class="text-decoration-none">+84 123 456 789</a></div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="fas fa-envelope fa-2x text-primary mb-2"></i>
                            <div><strong>Email</strong></div>
                            <div><a href="mailto:booking@restaurantly.com" class="text-decoration-none">booking@restaurantly.com</a></div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="fas fa-map-marker-alt fa-2x text-primary mb-2"></i>
                            <div><strong>Địa chỉ</strong></div>
                            <div>123 Đường ABC, Quận 1<br>TP. Hồ Chí Minh</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center">
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <button onclick="window.print()" class="btn btn-outline-primary">
                        <i class="fas fa-print me-2"></i>In thông tin
                    </button>
                    <a href="@Url.Action("Check")" class="btn btn-outline-info">
                        <i class="fas fa-search me-2"></i>Kiểm tra đặt bàn
                    </a>
                    <a href="@Url.Action("Index", "Menu")" class="btn btn-outline-success">
                        <i class="fas fa-utensils me-2"></i>Xem thực đơn
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Về trang chủ
                    </a>
                </div>
            </div>

            <!-- Thank You Message -->
            <div class="text-center mt-5">
                <div class="bg-light p-4 rounded">
                    <h4 class="text-primary mb-3">Cảm ơn bạn đã chọn Restaurantly!</h4>
                    <p class="mb-0">Chúng tôi rất mong được phục vụ bạn và mang đến những trải nghiệm ẩm thực tuyệt vời nhất.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
@@media print {
    .btn, .card-header {
        display: none !important;
    }
    .container {
        max-width: 100% !important;
    }
}
</style>